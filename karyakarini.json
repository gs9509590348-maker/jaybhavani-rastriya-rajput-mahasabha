<script>
let all=[];

fetch("data/karyakarini.json")
.then(r=>r.json())
.then(j=>{
  all = j.karyakarini
    .filter(x=>x.active)
    .sort((a,b)=>a.order-b.order);
  render(all);
});

function render(list){
  const out=document.getElementById("out");
  out.innerHTML="";
  list.forEach(m=>{
    let badge="", badgeCls="";
    if(m.post.includes("‡§Ø‡•Å‡§µ‡§æ")){
      badge="‡§Ø‡•Å‡§µ‡§æ"; badgeCls="youth";
    }else if(m.level==="‡§∞‡§æ‡§∑‡•ç‡§ü‡•ç‡§∞‡•Ä‡§Ø"){
      badge="‡§∞‡§æ‡§∑‡•ç‡§ü‡•ç‡§∞‡•Ä‡§Ø"; badgeCls="national";
    }else{
      badge="‡§™‡•ç‡§∞‡§¶‡•á‡§∂"; badgeCls="state";
    }

    out.innerHTML+=`
    <div class="card">
      <img src="${m.photo||'https://via.placeholder.com/100'}">
      <h3>${m.name}</h3>
      <span class="badge ${badgeCls}">${badge}</span>
      <div class="small">
        <b>${m.post}</b><br>
        ${m.district||""} ${m.state?(", "+m.state):""}
      </div>
    </div>`;
  });
}

function filterBy(type,btn){
  document.querySelectorAll(".filters button")
    .forEach(b=>b.classList.remove("active"));
  btn.classList.add("active");

  if(type==="all"){ render(all); return; }

  if(type==="‡§Ø‡•Å‡§µ‡§æ"){
    render(all.filter(x=>x.post.includes("‡§Ø‡•Å‡§µ‡§æ")));
    return;
  }

  render(all.filter(x=>x.level===type));
}
