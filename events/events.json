<div id="events"></div>

<script>
fetch('events/events.json')
  .then(res => res.json())
  .then(data => {
    let html = '';
    data.events.forEach(ev => {
      html += `
        <div style="border:1px solid #ddd;padding:12px;margin:10px 0;border-radius:8px">
          <img src="${ev.image}" style="width:100%;max-width:320px;border-radius:6px">
          <h3>${ev.title}</h3>
          <p><b>ğŸ“…</b> ${ev.date}</p>
          <p><b>ğŸ“</b> ${ev.location}</p>
          <p>${ev.description}</p>
          <span style="padding:4px 8px;border-radius:4px;
            background:${ev.status==='upcoming'?'#28a745':'#555'};
            color:#fff;font-size:12px">
            ${ev.status.toUpperCase()}
          </span>
        </div>`;
    });
    document.getElementById('events').innerHTML = html;
  });
</script>
